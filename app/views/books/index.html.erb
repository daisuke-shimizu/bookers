<h1>Books</h1>
<div>
  <h4>Title</h4>
  <% @books.each do |book| %>
  <span><%= book.title %></span>
  <% end %>
</div>
<div>
  <h4>Body</h4>
  <% @books.each do |book| %>
  <span><%= book.body %></span>
  <% end %>
</div>

<%= form_with model:@book, url:'/books', local:true do |f| %>
 <h3>New Book</h3>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %><br>
 <%= f.submit 'Create Book' %>
<% end %>